import("//build/test.gni")
import("../../../../services/accountmgr/os_account_service.gni")

module_output_path = "os_account/authorization"

config("authorization_framework_config_moduletest") {
  visibility = [ ":*" ]

  include_dirs = [ "include" ]

  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }

  defines = [
    "ACCOUNT_LOG_TAG = \"AuthorizationMTestFwk\"",
    "LOG_DOMAIN = 0xD001B00",
  ]
}

ohos_moduletest("authorization_client_module_cov_test") {
  branch_protector_ret = "pac_ret"

  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  module_out_path = module_output_path
  cflags = [ "-pipe" ]

  include_dirs = [
    "${authorization_interfaces_native_path}/include",
    "${authorization_framework_path}/include",
    "${common_path}/utils/include",
    "${innerkits_common}/include",
  ]

  sources = [
    "src/authorization_client_module_cov_test.cpp",
  ]

  configs = [ ":authorization_framework_config_moduletest" ]

  deps = [
    "${authorization_framework_path}:authorization_stub",
    "${authorization_framework_path}:authorization_innerkits",
    "${account_test_common}:account_test_common_source_set",
    "${common_path}:libaccount_common",
    "${innerkits_native_path}:libaccountkits",
  ]

  use_exceptions = true

  external_deps = [
    "ability_base:base",
    "ability_base:want",
    "ability_runtime:app_manager",
    "ability_runtime:ability_manager",
    "ability_runtime:wantagent_innerkits",
    "access_token:libaccesstoken_sdk",
    "access_token:libtokenid_sdk",
    "access_token:libtokensetproc_shared",
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "cJSON:cjson",
    "c_utils:utils",
    "googletest:gmock_main",
    "googletest:gtest_main",
    "hilog:libhilog",
    "ipc:ipc_single",
    "samgr:samgr_proxy",
    "tee_client:libteec",
  ]
  cflags_cc = []
  if (os_account_support_authorization) {
    cflags_cc += [ "-DSUPPORT_AUTHORIZATION" ]
  }
  
  if (use_libfuzzer) {
    cflags_cc += [ "-DFUZZ_TEST" ]
  }

  cflags_cc += [ "-DACCOUNT_TEST" ]
}

group("moduletest") {
  testonly = true

  deps = [
    ":authorization_client_module_cov_test",
  ]
}